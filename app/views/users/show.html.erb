<h1>User Profile</h1>
<hr>

<% user = User.find_by(id: params["id"]) %>

<p>User Name: <%= user.user_name %></p>
<p>Email: <%= user.email %></p>
<p>Password: <%= user.password %></p>
<p><%= link_to "[Edit]", "/users/#{user.id}/edit" %>
   <%= link_to "[Delete]", "/users/#{user.id}", method: 'delete' %>
</p>