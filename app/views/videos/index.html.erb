<div class="row">
	<style type="text/css">
   body { background: rgb(161, 98, 122) !important; }
  </style>

  <% Video.all.order('created_at desc').each do |video| %>

    <div class="col-sm-4 my-4 text-center">
      <iframe src= <%= video.video_url%>></iframe>
      <p style = "color: rgb(176,224,230); font-family: Mistral ; font-size: 150%">
        <%= video.title %><br>
        <%= video.level%> <%= video.length%> minutes
      </p>
    </div>

  <% end %>

</div>